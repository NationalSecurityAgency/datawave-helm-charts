{
    "$id": "https://code.nsa.org/datawave/schema",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "additionalProperties": true,
    "description": "Schema for DataWave Helm values",
    "properties": {
        "dockerRegistry": {
            "properties": {
                "url": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "global": {
            "properties": {
                "serviceDns": {
                    "properties": {
                        "accumuloManager": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "authorization": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "cache": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        },
                        "configuration": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "port": {
                                    "type": "integer"
                                }
                            },
                            "type": "object"
                        },
                        "rabbitmq": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        }
    },
    "title": "Helm Values Schema",
    "type": "object"
}
